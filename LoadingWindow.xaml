<Window x:Class="BBBUG.COM.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBBUG.COM"
        mc:Ignorable="d"
        Title="BBBUG音乐聊天室" WindowStartupLocation="CenterScreen" Topmost="True" WindowStyle="None" AllowsTransparency="True" Background="Transparent" OpacityMask="White" Height="200" Width="400"  >
    <Window.Effect>
        <DropShadowEffect BlurRadius="10" Color="#999" Direction="300" ShadowDepth="2"/>
    </Window.Effect>
    <Grid>
        <Border CornerRadius="5" Background="#333" Margin="10"  MouseDown="Border_MouseDown"/>
        <Border CornerRadius="0,0,5,5" Background="#ffffff" Margin="10,60,10,10"/>
        <Label Name="title" Content="提示信息标题" FontSize="18" HorizontalContentAlignment="Center"  Foreground="#FFFFFF"  Margin="20,20,10,0" VerticalAlignment="Top"  MouseDown="Border_MouseDown" HorizontalAlignment="Left"/>
        <TextBlock  TextWrapping="Wrap"  VerticalAlignment="Center" HorizontalAlignment="Center" Text="正在进入房间，请稍候" Margin="10,50,10,10" FontSize="16" Foreground="#333" Name="message" />
    </Grid>
</Window>
